/* pages/category/category.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .leftmenu {
  flex: 2;
}
.cates .cates_container .leftmenu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-style: 20rpx;
}
.cates .cates_container .leftmenu .selective {
  border-left: 5rpx solid currentColor;
  color: var(--themeColor);
}
.cates .cates_container .rightmenu {
  display: flex;
  flex: 6;
}
.cates .cates_container .rightmenu .brands_group .brands_title {
  align-items: center;
  height: 80rpx;
  display: flex;
  font-style: 20rpx;
  justify-content: center;
}
.cates .cates_container .rightmenu .brands_group .brands_title .gan {
  color: red !important;
  padding: 0 10rpx;
}
.cates .cates_container .rightmenu .brands_group .brands_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .rightmenu .brands_group .brands_list navigator {
  width: 31.33%;
  margin: 0 1%;
  text-align: center;
}
.cates .cates_container .rightmenu .brands_group .brands_list navigator image {
  width: 50%;
}
